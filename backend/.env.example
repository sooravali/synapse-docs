# Backend Configuration for Synapse-Docs
# Copy this to .env and fill in your actual values

# Adobe PDF Embed API Configuration (Required)
ADOBE_CLIENT_ID=your_adobe_client_id_here

# Database Configuration
DATABASE_URL=sqlite:///./data/synapse.db

# CORS Configuration
CORS_ORIGINS=["http://localhost:5173", "http://localhost:8000", "http://localhost:8080"]

# Vector Search Configuration
FAISS_INDEX_PATH=./data/faiss_index.bin
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# LLM Service Configuration (for Insights feature)
LLM_PROVIDER=gemini
GEMINI_MODEL=gemini-1.5-flash

# Google Gemini API Configuration (REQUIRED FOR INSIGHTS)
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# TTS Service Configuration (for Podcast feature)
TTS_PROVIDER=azure

# Azure Speech Services Configuration (REQUIRED FOR PODCAST AUDIO)
# Get these from: https://portal.azure.com -> Speech Services
AZURE_TTS_KEY=your_azure_tts_key_here
AZURE_TTS_REGION=your_azure_region_here
AZURE_TTS_ENDPOINT=https://your_region.api.cognitive.microsoft.com/
